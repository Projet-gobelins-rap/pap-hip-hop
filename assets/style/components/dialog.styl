.dialog
  position relative
  display flex
  z-index 10
  width: 100%
  max-width: 1000px

  &-content
    display: flex
    flex-direction: column
    align-items: flex-start

  &-infos
    display: flex
    align-items: center
    position: relative
    left: -20px

    &--pic
      width: 110px
      height: 110px
      padding: 15px

      // TODO : remove
      background-color: pink
      border-radius: 50%

    &--img
      object-fit: cover
      width: 100%
      height: 100%
      border-radius: 50%

    &--name
      font-size: 30px
      color: black
      position relative
      padding: 17px 20px
      &::after 
        content: ""
        width: calc(100% + 40px)
        height: 100%
        position: absolute
        top: 0
        left: -30px
        z-index -1
        background-color white
        border-radius: 37px

  &-text 
    padding: 30px 35px
    background-color white
    border-radius: 30px

    p
      font-size: 22px
      line-height: 30px

  &-choices
    display: flex
    flex-direction: column
    align-items: stretch