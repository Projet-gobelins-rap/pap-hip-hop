*
  font-family: "SofiaPro";
  box-sizing: border-box
  margin: 0
  color $darkGrey

body
  overflow hidden
  background #DCD3D0

.main
  height 100vh
  display flex
  flex-direction column

#noise
  z-index: 100;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  opacity: .1;
